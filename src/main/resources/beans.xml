<?xml version="1.0" encoding="UTF-8" ?>
<beans>
    <bean id="aservice" class="com.minis.test.entity.AServiceImpl">
        <constructor-arg type="String" name="name" value="abc"/>
        <constructor-arg type="int" name="level" value="3"/>
        <property type="String" name="property1" value="Someone says"/>
        <property type="String" name="property2" value="Hello World!"/>
        <property type="com.minis.test.entity.BService" name="ref1" ref="bservice"/>
    </bean>

    <bean id="bservice" class="com.minis.test.entity.BService">
        <property type="com.minis.test.entity.CService" name="cService" ref="cservice"/>
    </bean>
    <bean id="cservice" class="com.minis.test.entity.CService">
        <property type="com.minis.test.entity.AService" name="aService" ref="aservice"/>
    </bean>
</beans>